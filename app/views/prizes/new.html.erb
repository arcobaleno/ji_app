<h1>New Prize Page</h1>

<div class="row">
	<div class="span6">
		<%= form_for(@prize) do |f| %>

			<%= f.label :value %>
			<%= f.text_field :value %>

			<%= f.label :prize_type %>
			<%= f.text_field :prize_type %>

			<%= f.label :description %>
			<%= f.text_field :description %>

			<%= f.label :redeemed %>
			<%= f.text_field :redeemed %>

			<%= f.label :mailed %>
			<%= f.text_field :mailed %>
	</div>

	<div class="center">
		<%= f.submit "Add New Prize", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>