<% if current_user.user_type == 3 %>
	<h1>This is the banker page</h1>

	<div class="row">
		<%-# User Profile Picture -%>
		<aside class="span2">
			<%= image_tag @user.avatar_url.to_s, :id => 'profile' %>
		</aside>
		<%-# User contact Information-%>
		<aside class="span4">
			<section>
				<p>
				<h1>
					<%= full_name(@user) %>
				</h1>
			    </p>

				<h4>
					Email: <%= @user.email %>
				</h4>
				
			</section>
		</aside>
	</div>

</br>

	<div class="row">
		<div class="span3">
			<div class="banker_box1">
				<h3>In Bank:</h3>
			</br>
				<h1><%= @credits_in_bank %></h1>
			</div>

			<div class="banker_box2">
				<h3>In Vendors:</h3>
			</br>
				<h1><%= @credits_in_vendors %></h1>
			</div>
		</div>

		<div class="span3">
			<div class="banker_box3">
				<h3>In Pools:</h3>
			</br>
				<h1><%= @credits_in_pools %></h1>
			</div>
			
			<div class="banker_box4">
				<h3>In Players:</h3>
			</br>
				<h1><%= @credits_in_players %></h1>
			</div>
		</div>

		<div class="span6">
			<div class="banker_box5">
				<h3>Total Credits:</h3>
			</br>
				<h1 class="total_credits"><%= @total_credits %></h1>
			</div>
		</div>
	</div>
</br>
	<div class="row">
		<div class="vendor_list">
			<h3>All Vendors</h3>
			<%= render @vendors %>
		</div>
	</div>


<% else %>

	<h1> Get the Fuck Out </h1>

<% end %>