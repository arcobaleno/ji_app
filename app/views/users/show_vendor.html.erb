<% if current_user.user_type == 2 %>
	<h1>This is the Vendor page</h1>

	<div class="row">
		<%-# User Profile Picture -%>
		<aside class="span2">
			<%= image_tag @user.avatar_url.to_s, :id => 'profile' %>
		</aside>
		<%-# User contact Information-%>
		<aside class="span4">
			<section>
				<p>
				<h1>
					<%= full_name(@user) %>
				</h1>
			    </p>

				<h4>
					Email: <%= @user.email %>
				</h4>
				
			</section>
		</aside>
	</div>

</br>

	<div class="credit_code">
		<h2 class="credit_code_text">
			<%= @credit_code %>
		</h2>
	</div>

<% else %>

	<h1> Get the Fuck Out </h1>

<% end %>
