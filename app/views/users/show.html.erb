<% provide(:title, full_name(@user)) %>

<div class="row">
	<%-# User Profile Picture -%>
	<aside class="span2">
		<%= image_tag @user.avatar_url.to_s, :id => 'profile' %>
	</aside>
	<%-# User contact Information-%>
	<aside class="span4">
		<section>
			<p>
			<h1>
				<%= full_name(@user) %>
			</h1>
		    </p>

			<h4>
				Email: <%= @user.email %>
			</h4>

		    <p>
		    <h4>
				<%= link_to "Update Profile", edit_user_path %>
			</h4>
		    </p>
		</section>
	</aside>

	<aside class="span6">
		<div class="user_credits">
			<h3>
				Credit Info:
			</h3>
			<p>
				Credits in Bank:
				<%= @player_credits %>
			</p>
			<p>
				Credits in Pools:
				<%= @pool_credits %>
			</p>
		</div>
	</aside>
</div>

<div class="row">
	<aside class="span6">
		<div class="credit_redeem">
			<h3 class="redeem_label">Redeem Code Here</h3>
			<%= form_tag redeem_credits_credit_path, :method => 'put' do %>
			<p>
			<%= text_field_tag :search, params[:search], :class => 'credit_redeem_form' %>
			<%= submit_tag "Redeem", :class => 'redeem_button' %>
			</p>
			<% end %>

		</div>
	</aside>
</div>