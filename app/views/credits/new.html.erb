<h1>Credit Creation Page</h1>

<div class="row">
	<div class="span6 offset3">
	
<%= form_for(@credit) do |f| %>

	<%= f.label :credit_code %>
	<%= f.text_field :credit_code %>

	<%= f.hidden_field :user_id, :value => current_user.id %>

	<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

<% end %>

	</div>
</div>